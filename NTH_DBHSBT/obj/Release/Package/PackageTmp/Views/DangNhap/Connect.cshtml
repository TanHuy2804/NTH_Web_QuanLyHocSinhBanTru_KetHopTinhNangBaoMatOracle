
@{
    ViewBag.Title = "DangNhap";
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<style>
    /* CSS được nhúng trực tiếp vào view */
    .connect {
        background-image: url('../../image/tải xuống.jpg');
        background-size: cover; /* Phù hợp với kích thước của cửa sổ trình duyệt */
        color: #fff; /* Màu chữ trắng */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Chiều cao của viewport */
        margin: 0; /* Loại bỏ margin mặc định */
    }

    .container {
        background-color: rgb(128, 128, 128, 0.7); /* Màu nền xuyên thấu để tăng độ tương phản */
        padding: 20px;
        border-radius: 10px;
        width: 400px; /* Độ rộng của khung đăng nhập */
        /*text-align: center;*/ /* Căn giữa nội dung trong container */
    }

    .form-signin label {
        display: inline-block;
        width: 100px; /* Độ rộng của nhãn */
        margin-right: 5px; /* Khoảng cách giữa nhãn và ô nhập liệu */
        margin-bottom: 15px; /* Khoảng cách giữa nhãn và ô nhập liệu */
        text-align: left; /* Căn trái cho nhãn */
    }

    /*.btncnt {
        background-color: blue;
        color: white;
        border: 1px solid blue;*/ /* Thêm bo viền 1px với màu tương tự nền của nút */
    /*border-radius: 5px;*/ /* Bo tròn các góc của nút */
    /*padding: 8px 40px;*/ /* Tăng khoảng cách giữa nội dung và viền */
    /*cursor: pointer;*/ /* Biến đổi con trỏ thành dấu nhấp chuột khi di chuột qua nút */
    /*}*/
    /* CSS cho thông báo "Tài khoản đã bị khóa" */
    .account-locked-message {
        color: red; /* Màu chữ đỏ */
        text-align: center; /* Căn giữa nội dung */
        font-size: 16px; /* Cỡ chữ */
        margin-bottom: 15px; /* Khoảng cách với các phần tử khác */
    }
</style>

<div class="connect">
    <div class="container">
        @if (ViewBag.AccountLocked != null && (bool)ViewBag.AccountLocked)
        {
            <div class="account-locked-message">
                Tài khoản đã bị khóa
            </div>
        }

        @using (Html.BeginForm("Connect", "DangNhap", FormMethod.Post, new { id = "connectForm", @class = "form-signin" }))
        {
            <h2 class="text-center">ĐĂNG NHẬP</h2>

            <div class="row">
                <div class="col-4">
                    <label class="mb-0" for="txtUser">Tên tài khoản:</label>
                </div>
                <div class="col-8">
                    @Html.TextBox("txtUser", null, new { @class = "w-100", placeholder = "Username", required = "required" })

                </div>
            </div>

            <div class="row mt-3">
                <div class="col-4">
                    <label class="mb-0" for="txtPassword">Mật khẩu:</label>

                </div>
                <div class="col-8">
                    @Html.Password("txtPassword", null, new { @class = "w-100", placeholder = "Password", required = "required" })

                </div>
            </div>


            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary px-5 " type="submit">Đăng nhập</button>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

