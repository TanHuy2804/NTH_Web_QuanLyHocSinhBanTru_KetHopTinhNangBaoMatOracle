
@{
    ViewBag.Title = "ThongTinBaiThi";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <style>
        .thongtinbaithi {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
            text-align: center;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .text-center {
            text-align: center;
        }
    </style>
    <div class="thongtinbaithi">
        <div class="container">
            <h2>Làm bài kiểm tra</h2>
            <div>
                @using (Html.BeginForm("Thi", "ThiOnline", FormMethod.Post, new { id = "thiForm" }))
                {
                    <div class="form-group">
                        @Html.Label("Mã học sinh:")
                        @Html.TextBox("MaHocSinh", null, new { @class = "form-control", placeholder = "Nhập mã học sinh" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Chọn môn học:")
                        @Html.DropDownList("MaMonHoc", new SelectList(ViewBag.DanhSachMonHoc, "MaMH", "MaMH"), "Chọn môn học", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Chọn mã đề thi:")
                        @Html.DropDownList("MaDeThi", new SelectList(ViewBag.DanhSachDeThi, "MaDeThi", "MaDeThi"), "Chọn mã đề thi", new { @class = "form-control" })
                    </div>
                    <div class="text-center">
                        <button type="button" onclick="validateForm()" class="btn">Bắt đầu thi</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function validateForm() {
            var maHocSinh = document.getElementById("MaHocSinh").value;
            var maMonHoc = document.getElementById("MaMonHoc").value;
            var maDeThi = document.getElementById("MaDeThi").value;

            if (maHocSinh === "" || maMonHoc === "" || maDeThi === "") {
                alert("Vui lòng chọn đầy đủ mã học sinh, mã môn học và mã đề thi.");
            } else {
                document.getElementById("thiForm").submit();
            }
        }
        document.getElementById("MaMonHoc").addEventListener("change", function () {
            var maMonHoc = this.value;
            var maDeThiDropdown = document.getElementById("MaDeThi");

            maDeThiDropdown.innerHTML = '<option>Loading...</option>';

            fetch('/ThiOnline/LayDanhSachDeThiTheoMon?maMonHoc=' + maMonHoc)
                .then(response => response.json())
                .then(data => {
                    maDeThiDropdown.innerHTML = '<option>Chọn mã đề thi</option>';
                    data.forEach(deThi => {
                        var option = document.createElement("option");
                        option.value = deThi.MaDeThi;
                        option.text = deThi.MaDeThi;
                        maDeThiDropdown.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error('Error fetching exam codes:', error);
                });
        });
    </script>


