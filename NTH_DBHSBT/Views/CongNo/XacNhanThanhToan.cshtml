@model NTH_DBHSBT.Models.ThongTinThanhToan
@{
    ViewBag.Title = "XacNhanThanhToan";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>XacNhanThanhToan</h2>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kết quả thanh toán</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #EEF5FF;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .container {
            width: 50vw;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #FFFFFF;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .index {
            color: chartreuse;
        }

        .flex-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .flex-item {
            color: #04BE04;
            margin-left: 5px;
        }

        .back-button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #04BE04;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 200px;
        }

            .back-button:hover {
                background-color: #04BE04;
            }
    </style>

    <div class="container">
        <i class="fa-solid fa-circle-check" style="font-size: 120px; color: #04BE04;"></i>
        @*<i class="fas fa-check-circle"></i>*@
        <h4>@ViewBag.KetQua</h4>
        <div class="flex-container">
            <div>Mã hóa đơn: </div>
            <div class="flex-item">@Model.maDonHang</div>
        </div>
        <div class="flex-container">
            <div>Mã học sinh: </div>
            <div class="flex-item">@Model.maHS</div>
        </div>
        <div class="flex-container">
            <div>Mã công nợ: </div>
            <div class="flex-item">@Model.maCongNo</div>
        </div>

        <div class="flex-container">
            <div>Ngân hàng thanh toán: </div>
            <div class="flex-item">@Model.nganHangThanhToan</div>
        </div>

        <div class="flex-container">
            <div>Ngày thanh toán: </div>
            <div class="flex-item">@Model.ngayThanhToan</div>
        </div>

        <div class="flex-container">
            <div>Tổng thanh toán: </div>
            <div class="flex-item">@Model.tongTien</div>
        </div>

        <button class="back-button" onclick="redirectToCongNo()">Quay lại</button>
    </div>

    <script>
        function redirectToCongNo() {
            window.location.href = "/CongNo/CongNo";
        }
    </script>

